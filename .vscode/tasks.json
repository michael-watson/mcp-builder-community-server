{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "command": "rover", // Could be any other shell command
      "args": [
        "dev",
        "--mcp",
        "./.apollo/mcp.local.yaml",
        "--supergraph-config",
        "./.apollo/supergraph.yaml",
        "--router-config",
        "./.apollo/router.local.yaml"
      ],
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "docker build",
      "command": "docker",
      "args": ["build", "--tag", "mcp-server-builder-series", "."],
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "docker run",
      "command": "docker",
      "args": [
        "run",
        "-it",
        "--env-file",
        ".env",
        "-p5000:5000",
        "mcp-server-builder-series"
      ],
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "mcp inspector",
      "command": "npx", // Could be any other shell command
      "args": ["@modelcontextprotocol/inspector"],
      "type": "shell",
      "problemMatcher": []
    }
  ]
}
